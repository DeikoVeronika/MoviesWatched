@model MoviesWatchedDomain.Model.Actor

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Actor</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ActorImage)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ActorImage)
        </dd>
    </dl>
</div>

<!-- Секція для відображення фільмів актора -->
<div>
    <h4>Movies</h4>
    <ul>
        @if (ViewBag.Movies != null && ViewBag.Movies.Count > 0)
        {
            foreach (var movie in ViewBag.Movies)
            {
                <li>@movie.Title</li>
            }
        }
        else
        {
            <p>No movies found for this actor.</p>
        }
    </ul>
</div>

<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
